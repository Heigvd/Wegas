{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2020",
    "jsx": "react",
    "allowJs": false,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "test",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
