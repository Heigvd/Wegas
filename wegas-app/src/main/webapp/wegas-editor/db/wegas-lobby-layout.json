{
    "id": 2003,
    "type" : "Layout",
    "top" : {
        "children": [{
            "type": "Text",
            "content": "Lobby",
            "cssClass": "wegas-title"
        },{
            "type": "LoginButton",
            "cssClass": "menu-loginbutton"
        }]
    },
    "left": {
        "children": [{
            "type": "TabView",
            "id": "leftTabView",
            "children": [{
                "type": "Tab",
                "label": "Game models",
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "GameModel",
                    "plugins": [{
                        "fn": "WidgetToolbar",
                        "cfg": {
                            "children": [{
                                "type": "NewEntityButton",
                                "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New game model",
                                "targetClass": "GameModel",
                                "dataSource": "GameModel"
                            }]
                        }
                    }]
                }]
            }]
        }]
    },
    "center": {
        "children": [{
            "id": "centerTabView",
            "type": "TabView",
            "children": [{
                "id": "gamesTreeViewTab",
                "type": "Tab",
                "label": "Games",
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "Game",
                    "emptyMessage": "Click in the left column to select a game.",
                    "plugins": [{
                        "fn": "WidgetToolbar",
                        "cfg": {
                            "children": [{
                                "type": "NewEntityButton",
                                "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New game",
                                "targetClass": "Game",
                                "dataSource": "Game",
                                "disabled": true
                            }]
                        }
                    }]
                }]
            }]
        }]
    },
    "right": {
        "width": 50,
        "resize": true,
        "collapse": false,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "id": "rightTabView",
            "children": [],
            "plugins": [{
                "fn": "LayoutToggleTab"
            }]
        }]
    }
}
