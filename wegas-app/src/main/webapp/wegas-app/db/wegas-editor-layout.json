{
    "type": "ResizableLayout",
    "cssClass": "wegas-editview",
    "plugins": [
        {
            "fn": "PopupListener"
        },
        {
            "fn": "OnDeleteListener"
        }
    ],
    "top": {
        "height": 25,
        "children": [
            {
                "type": "UserLoginButton"
            }, {
                "type": "Button",
                "label": "<span class=\"fa fa-repeat fa-rotate-180\" title=\"Restart game\"></span>",
                "cssClass": "editor-restart-button",
                "plugins": [
                    {
                        "fn": "ResetAction"
                    }
                ]
            }, {
                "type": "EditorChat"
            }, {
                "type": "Button",
                "cssClass": "wegas-logo",
                "tooltip": "Back to lobby",
                "plugins": [
                    {
                        "fn": "OpenUrlAction",
                        "cfg": {
                            "url": "",
                            "target": "_self"
                        }
                    }
                ]
            }, {
                "type": "Text",
                "cssClass": "wegas-title"
            }, {
                "type": "Button",
                "label": "Advanced",
                "cssClass": "editor-scenarist-button wegas-advanced-feature",
                "plugins": [
                    {
                        "fn": "WidgetMenu",
                        "cfg": {
                            "children": [{
                                    "type": "Button",
                                    "label": "EXPERIMENTAL: Create a new scenario from player state",
                                    "plugins": [
                                        {
                                            "fn": "GmExtractorAction"
                                        }
                                    ]
                                }, {
                                    "type": "Button",
                                    "label": "<b>Experimental & Hazardous</b> Re-init default values from a player",
                                    "plugins": [
                                        {
                                            "fn": "GmDefaulterAction"
                                        }
                                    ]
                                }, {
                                    "type": "Button",
                                    "label": "Clear Combo Cache",
                                    "plugins": [
                                        {
                                            "fn": "FireAndForgetRequestAction",
                                            "cfg": {
                                                "url": "rest/combo",
                                                "method": "DELETE"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type": "Button",
                                    "label": "Clear EM level2 Cache",
                                    "plugins": [
                                        {
                                            "fn": "FireAndForgetRequestAction",
                                            "cfg": {
                                                "url": "rest/Utils/EmCache",
                                                "method": "DELETE"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }, {
                "type": "OpenTabButton",
                "label": "Help (old)",
                "cssClass": "editor-scenarist-button wegas-advanced-feature",
                "wchildren": [
                    {
                        "type": "Text",
                        "cssClass": "editor-help",
                        "content": "<iframe src=\"https://docs.google.com/document/d/16S3uGvSGkweay9Dng6mIus3ERdq5D1_GJIwMynTMcuo/pub?embedded=true\"></iframe>"
                    }
                ]
            }
        ]
    },
    "left": {
        "width": 300,
        "children": [
            {
                "type": "TabView",
                "id": "leftTabView",
                "cssClass": "wegas-tabview-fullheight",
                "children": [
                    {
                        "type": "Tab",
                        "label": "Content",
                        "cssClass": "editor-variables",
                        "children": [
                            {
                                "type": "VariableTreeView",
                                "dataSource": "Variable",
                                "plugins": [
                                    {
                                        "fn": "EditorTVNodeLoader"
                                    }, {
                                        "fn": "WidgetToolbar",
                                        "cfg": {
                                            "children": [
                                                {
                                                    "type": "NewDescriptorButton",
                                                    "label": "<span class=\"fa fa-plus-circle\"></span> New",
                                                    "cssClass": "editor-newVariable-button",
                                                    "targetClass": "VariableDescriptor"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }, {
                        "type": "Tab",
                        "label": "Layout",
                        "cssClass": "editor-pages",
                        "plugins": [{
                            "fn": "UneditablePageDisabler"
                        }],
                        "children": [
                            {
                                "type": "PageTreeview"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "center": {
        "width": "420px",
        "children": [
            {
                "id": "centerTabView",
                "type": "TabView",
                "cssClass": "wegas-tabview-fullheight",
                "children": [
                    {
                        "type": "Tab",
                        "id": "Attributes",
                        "label": "Attributes",
                        "tabSelector": "#centerTabView",
                        "selected": true,
                        "cssClass": "wegas-editor-menu-item-center",
                        "plugins": [
                            {
                                "fn": "Removeable"
                            }
                        ],
                        "wchildren": [
                            {
                                "content": "<div class=\"empty-edit-panel\"></div>"
                            }
                        ]
                    }, {
                        "type": "Button",
                        "label": "<span class=\"fa fa-plus-circle\" title=\"Add a tab\"></span>",
                        "cssClass": "editor-scenarist-button wegas-plus-tab",
                        "plugins": [
                            {
                                "fn": "WidgetMenu",
                                "cfg": {
                                    "children": [
                                        {
                                            "type": "OpenTabButton",
                                            "label": "Preview",
                                            "wchildren": [
                                                {
                                                    "type": "PageLoader",
                                                    "pageLoaderId": "previewPageLoader",
                                                    "defaultPageId": "default",
                                                    "cssClass": "editor-preview wegas-playerview",
                                                    "plugins": [
                                                        {
                                                            "fn": "PreviewFullScreen",
                                                            "cfg":{"selector":".wegas-layout-bd"}
                                                        }, {
                                                            "fn": "WidgetToolbar",
                                                            "cfg": {
                                                                "children": []
                                                            }
                                                        }, {
                                                            "fn": "PageEditor"
                                                        }, {
                                                            "fn": "TranslationEditor"
                                                        }, {
                                                            "fn": "Injector"
                                                        }, {
                                                            "fn": "PopupListener"
                                                        }, {
                                                            "fn": "ServerPopupListener"
                                                        }, {
                                                            "fn": "GetPageIdFromQueryString"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Files",
                                            "wchildren": [
                                                {
                                                    "type": "FileExplorer",
                                                    "plugins": [
                                                        {
                                                            "fn": "WidgetToolbar"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Styles",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary",
                                                    "library": "CSS",
                                                    "cssClass": "wegas-csseditor"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Server scripts",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Client scripts",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary",
                                                    "library": "ClientScript"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Impact",
                                            "wchildren": [
                                                {
                                                    "type": "WysiwygConsole",
                                                    "cssClass": "wegas-console wegas-editor-console"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Translations",
                                            "wchildren": [
                                                {
                                                    "type": "LanguagesManager"
                                                }
                                            ]
                                        }, {
                                            "type": "Button",
                                            "cssClass": "wegas-advanced-feature",
                                            "label": "Scenario properties",
                                            "plugins": [
                                                {
                                                    "fn": "EditEntityAction",
                                                    "cfg": {
                                                        "entity": "currentGameModel",
                                                        "dataSource": "GameModel"
                                                    }
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "cssClass": "wegas-advanced-feature",
                                            "label": "Log",
                                            "wchildren": [
                                                {
                                                    "type": "Log"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Attributes",
                                            "cssClass": "wegas-editor-menu-item-center",
                                            "wchildren": [
                                                {
                                                    "content": "<div class=\"empty-edit-panel\"></div>"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ],
                "plugins": [
                    {
                        "fn": "RemoveTabView",
                        "cfg": {
                            "tabViewName": "center"
                        }
                    }
                ]
            }
        ]
    },
    "right": {
        "width": "calc( 100% - 300px - 420px )",
        "children": [
            {
                "type": "TabView",
                "id": "rightTabView",
                "cssClass": "wegas-tabview-fullheight",
                "children": [
                    {
                        "type": "Tab",
                        "id": "Preview",
                        "label": "Preview",
                        "tabSelector": "#rightTabView",
                        "selected": true,
                        "plugins": [
                            {
                                "fn": "Hideable"
                            }
                        ],
                        "children": [
                            {
                                "type": "PageLoader",
                                "pageLoaderId": "previewPageLoader",
                                "defaultPageId": "default",
                                "cssClass": "editor-preview wegas-playerview",
                                "plugins": [
                                    {
                                        "fn": "PreviewFullScreen",
                                        "cfg":{"selector":".wegas-layout-bd"}
                                    }, {
                                        "fn": "WidgetToolbar",
                                        "cfg": {
                                            "children": []
                                        }
                                    }, {
                                        "fn": "PageEditor"
                                    }, {
                                        "fn": "TranslationEditor"
                                    }, {
                                        "fn": "Injector"
                                    }, {
                                        "fn": "PopupListener"
                                    }, {
                                        "fn": "ServerPopupListener"
                                    }, {
                                        "fn": "GetPageIdFromQueryString"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Button",
                        "label": "<span class=\"fa fa-plus-circle\" title=\"Add a tab\"></span>",
                        "cssClass": "editor-scenarist-button wegas-plus-tab",
                        "plugins": [
                            {
                                "fn": "WidgetMenu",
                                "cfg": {
                                    "children": [
                                        {
                                            "type": "OpenTabButton",
                                            "label": "Preview",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "PageLoader",
                                                    "pageLoaderId": "previewPageLoader",
                                                    "defaultPageId": "default",
                                                    "cssClass": "editor-preview wegas-playerview",
                                                    "plugins": [
                                                        {
                                                            "fn": "PreviewFullScreen",
                                                            "cfg":{"selector":".wegas-layout-bd"}
                                                        }, {
                                                            "fn": "WidgetToolbar",
                                                            "cfg": {
                                                                "children": []
                                                            }
                                                        }, {
                                                            "fn": "PageEditor"
                                                        }, {
                                                            "fn": "TranslationEditor"
                                                        }, {
                                                            "fn": "Injector"
                                                        }, {
                                                            "fn": "PopupListener"
                                                        }, {
                                                            "fn": "ServerPopupListener"
                                                        }, {
                                                            "fn": "GetPageIdFromQueryString"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Files",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "FileExplorer",
                                                    "plugins": [
                                                        {
                                                            "fn": "WidgetToolbar"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Styles",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary",
                                                    "library": "CSS",
                                                    "cssClass": "wegas-csseditor"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Server scripts",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Client scripts",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "ScriptLibrary",
                                                    "library": "ClientScript"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Impact",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "WysiwygConsole",
                                                    "cssClass": "wegas-console wegas-editor-console"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Translations",
                                            "wchildren": [
                                                {
                                                    "type": "LanguagesManager"
                                                }
                                            ]
                                        }, {
                                            "type": "Button",
                                            "cssClass": "wegas-advanced-feature",
                                            "label": "Scenario properties",
                                            "tabSelector": "#rightTabView",
                                            "plugins": [
                                                {
                                                    "fn": "EditEntityAction",
                                                    "cfg": {
                                                        "entity": "currentGameModel",
                                                        "dataSource": "GameModel"
                                                    }
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "cssClass": "wegas-advanced-feature",
                                            "label": "Log",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "type": "Log"
                                                }
                                            ]
                                        }, {
                                            "type": "OpenTabButton",
                                            "label": "Attributes",
                                            "cssClass": "wegas-editor-menu-item-right",
                                            "tabSelector": "#rightTabView",
                                            "wchildren": [
                                                {
                                                    "content": "<div class=\"empty-edit-panel\"></div>"
                                                }
                                            ]
                                    }

                                            ]
                                }
                            }
                        ]
                    }
                ],
                "plugins": [
                    {
                        "fn": "ExtraTabs",
                        "cfg": {
                            "tabSelector": "#rightTabView"
                        }
                    },
                    {
                        "fn": "RemoveTabView",
                        "cfg": {
                            "tabViewName": "right"
                        }
                    }
                ]
            }
        ]
    }
}
