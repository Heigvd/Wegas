{
    "type": "ResizableLayout",
    "top": {
        "height": 25,
        "children": [
            {
                "type": "UserLoginButton"
            }, {
                "type": "EditorChat"
            }, {
                "type": "Button",
                "cssClass": "wegas-logo",
                "tooltip": "Back to lobby",
                "plugins": [
                    {
                        "fn": "OpenUrlAction",
                        "cfg": {
                            "url": "",
                            "target": "_self"
                        }
                    }
                ]
            }, {
                "type": "Text",
                "cssClass": "wegas-title"
            }, {
                "type": "Button",
                "label": "Libraries",
                "cssClass": "editor-scenarist-button",
                "plugins": [
                    {
                        "fn": "WidgetMenu",
                        "cfg": {
                            "children": [
                                {
                                    "type": "OpenTabButton",
                                    "label": "Files",
                                    "wchildren": [
                                        {
                                            "type": "FileExplorer",
                                            "plugins": [
                                                {
                                                    "fn": "WidgetToolbar"
                                                }
                                            ]
                                        }
                                    ]
                                }, {
                                    "type": "OpenTabButton",
                                    "label": "Styles",
                                    "wchildren": [
                                        {
                                            "type": "ScriptLibrary",
                                            "library": "CSS",
                                            "cssClass": "wegas-csseditor"
                                        }
                                    ]
                                }, {
                                    "type": "OpenTabButton",
                                    "label": "Server scripts",
                                    "wchildren": [
                                        {
                                            "type": "ScriptLibrary"
                                        }
                                    ]
                                }, {
                                    "type": "OpenTabButton",
                                    "label": "Client scripts",
                                    "wchildren": [
                                        {
                                            "type": "ScriptLibrary",
                                            "library": "ClientScript"
                                        }
                                    ]
                                }, {
                                    "type": "OpenTabButton",
                                    "label": "Impact",
                                    "wchildren": [
                                        {
                                            "type": "WysiwygConsole",
                                            "cssClass": "wegas-console wegas-editor-console"
                                        }
                                    ]
                                }, {
                                    "type": "Button",
                                    "label": "Scenario properties",
                                    "cssClass": "wegas-advanced-feature",
                                    "plugins": [
                                        {
                                            "fn": "EditEntityAction",
                                            "cfg": {
                                                "entity": "currentGameModel",
                                                "dataSource": "GameModel"
                                            }
                                        }
                                    ]
                                }, {
                                    "type": "OpenTabButton",
                                    "cssClass": "wegas-advanced-feature",
                                    "label": "Log",
                                    "wchildren": [
                                        {
                                            "type": "Log"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }, {
                "type": "OpenTabButton",
                "label": "Help",
                "wchildren": [
                    {
                        "type": "Text",
                        "cssClass": "editor-help",
                        "content": "<iframe src=\"https://docs.google.com/document/d/16S3uGvSGkweay9Dng6mIus3ERdq5D1_GJIwMynTMcuo/pub?embedded=true\"></iframe>"
                    }
                ]
            }
        ]
    },
    "left": {
        "width": 300,
        "children": [
            {
                "type": "TabView",
                "id": "leftTabView",
                "cssClass": "wegas-tabview-fullheight",
                "children": [
                    {
                        "type": "Tab",
                        "label": "Variables",
                        "cssClass": "editor-variables",
                        "children": [
                            {
                                "type": "VariableTreeView",
                                "dataSource": "Variable",
                                "plugins": [
                                    {
                                        "fn": "EditorTVNodeLoader"
                                    }, {
                                        "fn": "WidgetToolbar",
                                        "cfg": {
                                            "children": [
                                                {
                                                    "type": "NewDescriptorButton",
                                                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New",
                                                    "cssClass": "editor-newVariable-button",
                                                    "targetClass": "VariableDescriptor"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }, {
                        "type": "Tab",
                        "label": "Pages",
                        "cssClass": "editor-pages",
                        "children": [
                            {
                                "type": "PageTreeview"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "center": {
        "children": [
            {
                "id": "centerTabView",
                "type": "TabView",
                "cssClass": "wegas-tabview-fullheight",
                "children": [
                    {
                        "type": "Tab",
                        "label": "Preview",
                        "plugins": [{"fn": "TabDocker"}],
                        "children": [
                            {
                                "type": "PageLoader",
                                "pageLoaderId": "previewPageLoader",
                                "defaultPageId": 1,
                                "cssClass": "editor-preview wegas-playerview",
                                "plugins": [
                                    {
                                        "fn": "PreviewFullScreen"
                                    }, {
                                        "fn": "WidgetToolbar",
                                        "cfg": {
                                            "children": [
                                                {
                                                    "type": "Button",
                                                    "cssClass": "editor-restart-button",
                                                    "label": "<span class=\"wegas-icon wegas-icon-reset\"></span>Restart",
                                                    "plugins": [
                                                        {
                                                            "fn": "ResetAction"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    }, {
                                        "fn": "PageEditor"
                                    }, {
                                        "fn": "Injector"
                                    }, {
                                        "fn": "PopupListener"
                                    }, {
                                        "fn": "ServerPopupListener"
                                    }
                                ]
                            }
                        ]
                    }
                ],
                "plugins": [{"fn": "ExtraTabs", "cfg": {"dock": true}}]
            }
        ]
    },
    "right": {
        "width": "455px",
        "children": [
            {
                "type": "TabView",
                "id": "rightTabView",
                "cssClass": "wegas-tabview-fullheight",
                "plugins": [
                    {
                        "fn": "RemoveRightTab"
                    }
                ]
            }
        ]
    }
}
