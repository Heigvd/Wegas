{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "preserve",
        "allowJs": true,
        "module": "esnext",
        "outDir": "dist",
        "strict": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "noEmit": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "typings"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "useTranspileModule": true
    }
}