{
    "@class": "GameModel",
    "name": "SimpleDialogue",
    "properties": {
        "cssUri": "wegas-simpledialogue/css/wegas-simpledialogue.css",
        "pagesUri": "wegas-simpledialogue/db/wegas-simpledialogue-pages.json?"
    },
    "childVariableDescriptors": [{
        "@class": "NumberDescriptor",
        "name": "icecream",
        "label": "Ice cream",
        "defaultInstance":{
            "@class": "NumberInstance",
            "value": 0.0
        },
        "scope":{
            "@class": "TeamScope"
        }
    },{
        "@class": "DialogueDescriptor",
        "name": "simpleDialogue",
        "label": "simpleDialogue",
        "defaultInstance": {
            "@class": "FSMInstance",
            "currentStateId": 1
        },
        "scope": {
            "@class": "TeamScope"
        },
        "states": {
            "1": {
                "@class": "DialogueState",
                "text": "Bonjour, ça va?",
                "transitions": [{
                    "@class": "DialogueTransition",
                    "actionText": "Oui",
                    "nextStateId": 2
                }, {
                    "@class": "DialogueTransition",
                    "actionText": "Non",
                    "nextStateId": 3
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 50,
                    "y": 50
                },
                "onEnterEvent": {
                    "@class": "Script",
                    "content": "icecream.value = 0;",
                    "language": "JavaScript"
                }
            },
            "2": {
                "@class": "DialogueState",
                "text": "A bientôt!",
                "transitions": [{
                    "@class": "DialogueTransition",
                    "actionText": "Au revoir",
                    "nextStateId": 1
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 550,
                    "y": 50
                }
            },
            "3": {
                "@class": "DialogueState",
                "text": "Prends une glace <img src='../../wegas-simpledialogue/images/icecream.png' />",
                "transitions": [{
                    "@class": "DialogueTransition",
                    "actionText": "Merci",
                    "nextStateId": 6
                },{
                    "@class": "DialogueTransition",
                    "actionText": "J'ai encore faim",
                    "nextStateId": 7
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 50,
                    "y": 550
                }
            },
            "4": {
                "@class": "DialogueState",
                "text": "Ça va mieux?",
                "transitions": [{
                    "@class": "DialogueTransition",
                    "actionText": "Oui",
                    "nextStateId": 2
                },{
                    "@class": "DialogueTransition",
                    "actionText": "Non",
                    "nextStateId": 5
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 550,
                    "y": 225
                }
            },
            "5": {
                "@class": "DialogueState",
                "text": "Reprends une glace ;-) <img src='../../wegas-simpledialogue/images/icecream.png' />",
                "transitions": [{
                    "@class": "DialogueTransition",
                    "actionText": "Merci",
                    "nextStateId": 6
                },{
                    "@class": "DialogueTransition",
                    "actionText": "Encore une stp!",
                    "nextStateId": 7
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 550,
                    "y": 550
                }
            },
            "6": {
                "@class": "State",
                "onEnterEvent": {
                    "@class": "Script",
                    "content": "icecream.value++;",
                    "language": "JavaScript"
                },
                "transitions": [{
                    "@class": "Transition",
                    "nextStateId": 4
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 270,
                    "y": 360
                }
            },
            "7": {
                "@class": "State",
                "onEnterEvent": {
                    "@class": "Script",
                    "content": "icecream.value++;",
                    "language": "JavaScript"
                },
                "transitions": [{
                    "@class": "Transition",
                    "nextStateId": 5
                }],
                "editorPosition": {
                    "@class": "Coordinate",
                    "x": 270,
                    "y": 550
                }
            }
        }
    }]
}
