{
    "1": {
        "id": 1,
        "direction": "vertical",
        "type": "List",
        "cssClass": "layout",
        "children": [
            {
                "type": "List",
                "direction": "horizontal",
                "cssClass": "header",
                "children": [
                    {
                        "type": "Text",
                        "cssClass": "title",
                        "content": "Activité - pédagogie"
                    }
                ]
            },
            {   
                "label": "pageLoader",
                "type": "PageLoader",
                "pageLoaderId": "maindisplayarea",
                "cssClass": "body",
                "variable": {
                    "name": "currentPage"
                }
            }
        ]
    },
    "2": {
        "id": 2,
        "direction": "vertical",
        "type": "List",
        "cssClass": "content",
        "children": [
            {
                "type": "Text",
                "cssClass": "data",
                "content": "<p>Description de l'exercice...</p><p><a href=\"article1.pdf\" target=\"_blank\">Article 1</a></p><p><a href=\"article2.pdf\" target=\"_blank\">Article 2</a></p>"
            },
            {
                "type": "Button",
                "label": "Suivant >",
                "cssClass": "button",
                "plugins": [
                    {
                        "fn": "ExecuteScriptAction",
                        "cfg": {
                            "onClick": {
                                "@class": "Script",
                                "language": "JavaScript",
                                "content": "importPackage(com.wegas.core.script);\ncurrentPage.value = 3;"
                            }
                        }
                    },
                    {
                        "fn": "OpenPageAction",
                        "cfg": {
                            "subpageId": 3,
                            "targetPageLoaderId": "maindisplayarea"
                        }
                    }
                ]
            }
        ]
    },
    "3": {
        "id": 3,
        "direction": "vertical",
        "type": "List",
        "cssClass": "content",
        "children": [
            {
                "type": "Text",
                "cssClass": "data",
                "content": "TODO: Réponse"
            },
            {
                "type": "List",
                "direction": "horizontal",
                "children": [
                    {
                        "type": "Button",
                        "label": "< Retour",
                        "plugins": [
                            {
                                "fn": "ExecuteScriptAction",
                                "cfg": {
                                    "onClick": {
                                        "@class": "Script",
                                        "language": "JavaScript",
                                        "content": "importPackage(com.wegas.core.script);\ncurrentPage.value = 2;"
                                    }
                                }
                            },
                            {
                                "fn": "OpenPageAction",
                                "cfg": {
                                    "subpageId": 2,
                                    "targetPageLoaderId": "maindisplayarea"
                                }
                            }
                        ]
                    },
                    {
                        "type": "Button",
                        "label": "Sauvegarder"
                    }
                ]
            }
        ]
    }
