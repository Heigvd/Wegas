<profiles>
    <profile>
        <id>light-profile</id>
        <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${war.plugin.version}</version>
                    <configuration>
                        <warName>Wegas</warName>
                        <failOnMissingWebXml>false</failOnMissingWebXml>
                        <archive>
<!--                            <manifest>
                                <addClasspath>true</addClasspath>
                                <classpathPrefix>lib</classpathPrefix>
                            </manifest>-->
<!--                            <manifestEntries>
                                <Class-Path>file:/${basedir}/../wegas-core/target/wegas-core.jar</Class-Path>
                            </manifestEntries>-->
                        </archive>
                    </configuration>
                </plugin>
            </plugins>
        </build>
    </profile>
    <profile>
        <id>release-profile</id>
        <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${war.plugin.version}</version>
                    <configuration>
                        <!--remove not min js-->
                        <packagingExcludes>%regex[(?!.*min).*\.js]</packagingExcludes>
                        <failOnMissingWebXml>false</failOnMissingWebXml>
                        <warName>${project.build.finalName}</warName>

                        <overlays>
                            <overlay>
                                <id>wegaslibs</id>
                                <groupId>com.wegas</groupId>
                                <artifactId>wegas-resources</artifactId>
                                <type>war</type>
                                <includes>
                                    <include>lib/**/*-min.js</include>
                                    <include>lib/**/*_*.js</include>
                                    <include>lib/**/*.css</include>
                                    <include>lib/**/*.gif</include>
                                    <include>lib/**/*.png</include>
                                </includes>
                                <excludes>
                                    <exclude>lib/yui3/**</exclude>
                                </excludes>
                            </overlay>
                        </overlays>
                    </configuration>
                </plugin>
            </plugins>
        </build>
    </profile>
    <profile>
        <activation>
            <activeByDefault>true</activeByDefault>
        </activation>
        <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${war.plugin.version}</version>
                    <configuration>
                        <packagingExcludes>%regex[(?!.*min).*\.js]</packagingExcludes>
                        <failOnMissingWebXml>false</failOnMissingWebXml>
                        <warName>Wegas</warName>

                        <overlays>
                            <overlay>
                                <id>wegaslibs</id>
                                <groupId>com.wegas</groupId>
                                <artifactId>wegas-resources</artifactId>
                                <type>war</type>
                                <includes>
                                    <include>lib/**/*-min.js</include>
                                    <include>lib/**/*_*.js</include>
                                    <include>lib/**/*.css</include>
                                    <include>lib/**/*.gif</include>
                                    <include>lib/**/*.png</include>
                                </includes>
                                <excludes>
                                    <exclude>lib/yui3/**</exclude>
                                </excludes>
                            </overlay>
                        </overlays>
                    </configuration>
                </plugin>
            </plugins>
        </build>
    </profile>
