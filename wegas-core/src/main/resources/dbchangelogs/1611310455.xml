<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="maxence" id="1611310468485-1">
        <addColumn tableName="gamemodelcontent">
            <column name="librarytype" type="varchar(255)"/>
        </addColumn>
        <addColumn tableName="gamemodelcontent">
            <column name="gamemodel_id" type="int8"/>
        </addColumn>
        <createIndex indexName="index_gamemodelcontent_gamemodel_id" tableName="gamemodelcontent">
            <column name="gamemodel_id"/>
        </createIndex>
        <createIndex indexName="index_gamemodelcontent_gamemodel_id_librarytype_contentkey" tableName="gamemodelcontent" unique="true">
            <column name="gamemodel_id"/>
            <column name="librarytype"/>
            <column name="contentkey"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="gamemodel_id" baseTableName="gamemodelcontent" constraintName="fk_gamemodelcontent_gamemodel_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="gamemodel" />
    </changeSet>

    <changeSet author="maxence" id="1611310468485-2">
        <update tableName="gamemodelcontent">
            <column name='librarytype' value='CSS'/>
            <column name='contenttype' value='text/css'/>
            <where>csslibrary_gamemodel_id is not null</where>
        </update>
        <!-- at this point, all serverscripts are javascript scripts -->
        <update tableName="gamemodelcontent">
            <column name='librarytype' value='ServerScript'/>
            <column name='contenttype' value='application/javascript'/>
            <where>scriptlibrary_gamemodel_id is not null</where>
        </update>
        <!-- react based scenarion used to set contentType to ClientScript, YUI ones don't
        So, clientscripts with a ClientScript type are TS script, others are JS -->

        <!-- First change ClientScript to TS mimetype-->
        <update tableName="gamemodelcontent">
            <column name='contenttype' value='application/typescript'/>
            <where>contenttype ='ClientScript'</where>
        </update>
        <!-- All others are JSs -->
        <update tableName="gamemodelcontent">
            <column name='contenttype' value='application/javascript'/>
            <where>clientscriptlibrary_gamemodel_id is not null AND contenttype is NULL</where>
        </update>

        <!-- and eventually set library type -->
        <update tableName="gamemodelcontent">
            <column name='librarytype' value='ClientScript'/>
            <where>clientscriptlibrary_gamemodel_id is not null</where>
        </update>

        <!-- Unify gm FK-->
        <update tableName="gamemodelcontent">
            <column name='gamemodel_id' valueComputed="coalesce(clientscriptlibrary_gamemodel_id,csslibrary_gamemodel_id,scriptlibrary_gamemodel_id)"/>
        </update>
    </changeSet>

    <changeSet author="maxence" id="1611310468485-3">
        <dropForeignKeyConstraint baseTableName="gamemodelcontent" constraintName="fk_gamemodelcontent_clientscriptlibrary_gamemodelid"/>
        <dropForeignKeyConstraint baseTableName="gamemodelcontent" constraintName="fk_gamemodelcontent_csslibrary_gamemodelid"/>
        <dropForeignKeyConstraint baseTableName="gamemodelcontent" constraintName="fk_gamemodelcontent_scriptlibrary_gamemodelid"/>
        <dropIndex indexName="index_gamemodelcontent_csslibrary_gamemodelid_scriptlibrary_gam" tableName="gamemodelcontent"/>
    </changeSet>
    <changeSet author="maxence" id="1611310468485-4">
        <dropColumn columnName="clientscriptlibrary_gamemodel_id" tableName="gamemodelcontent"/>
        <dropColumn columnName="csslibrary_gamemodel_id" tableName="gamemodelcontent"/>
        <dropColumn columnName="scriptlibrary_gamemodel_id" tableName="gamemodelcontent"/>
    </changeSet>
</databaseChangeLog>
