        <addForeignKeyConstraint baseColumnNames="parentstring_id" baseTableName="enumitem" constraintName="fk_enumitem_parentstring_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="variabledescriptor"/>


        <!-- Convert peerreview evaluation categories into items -->
        <sql>
            INSERT INTO enumitem (id, name, item_order, parentevaluation_id, label_id)
            SELECT nextval('i18n_seq') as id, categories as name, 0 as item_order, 
            categorizedevaluationdescriptor_id as parentevaluation_id, nextval('i18n_seq') as label_id FROM categorizedevaluationdescriptor_categories;
        </sql>

        <!-- Convert StringDescriptor allowedValues into items -->
        <sql>
            INSERT INTO enumitem (id, name, item_order, parentstring_id, label_id)
            SELECT nextval('i18n_seq') as id, allowedvalues as name, allowedvalues_order as item_order, 
            stringdescriptor_id as parentstring_id, nextval('i18n_seq') as label_id FROM stringdescriptor_allowedvalues;
        </sql>

        <!-- create translatablecontent for each enumitem (evaluations) -->
        <sql>
            INSERT INTO translatablecontent (id, parentdescriptor_id) 
            SELECT item.label_id, prd.id as parentdescriptor_id 
            FROM evaluationdescriptor ed
            JOIN enumitem item on item.parentevaluation_id = ed.id
            JOIN peerreviewdescriptor as prd on container_id = prd.fbcomments_id OR  container_id = prd.feedback_id;
        </sql>

        <!-- create translatablecontent for each enumitem (stringdescriptor) -->
        <sql>
            INSERT INTO translatablecontent (id, parentdescriptor_id) 
            SELECT item.label_id, item.parentstring_id AS parentdescriptor_id 
            FROM enumitem item
            WHERE item.parentstring_id IS NOT NULL;
        </sql>

