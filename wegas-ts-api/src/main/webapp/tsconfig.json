{
    "compilerOptions": {
        "target": "es2018",
        "allowJs": false,
        "module": "esnext",
        "outDir": "dist",
        "sourceMap":true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}

