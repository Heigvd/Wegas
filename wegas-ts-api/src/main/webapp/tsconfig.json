{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": false,
        "module": "esnext",
        "outDir": "dist",
        "sourceMap":true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
