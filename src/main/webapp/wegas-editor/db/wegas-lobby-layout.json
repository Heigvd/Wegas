{
    "id": 2003,
    "type" : "Layout",
    "top" : {
        "children": [{
            "type": "Text",
            "content": "Lobby",
            "cssClass": "wegas-editor-title"
        }]
    },
    "left": {
        "children": [{
            "type": "TabView",
            "id": "leftTabView",
            "children": [{
                "type": "Tab",
                "label": "Game models",
                "toolbarChildren": [{
                    "type": "NewEntityButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New game model",
                    "targetClass": "GameModel"
                }],
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "GameModel"
                }]
            }]
        }]
    },
    "center": {
        "children": [{
            "id": "centerTabView",
            "type": "TabView",
            "children": [{
                "id": "gamesTreeViewTab",
                "type": "Tab",
                "label": "Games",
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "Game",
                    "emptyMessage": "Click in the left column to select a game."
                }],
                "toolbarChildren": [{
                    "type": "NewEntityButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New game",
                    "targetClass": "Game"
                }]
            }]
        }]
    },
    "right": {
        "width": 50,
        "resize": true,
        "collapse": false,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "id": "rightTabView",
            "children": [
            {
                "type": "Tab",
                "label": "Chat",
                "toolbarLabel": "Chat",
                "children": [{
                    "type": "Chat"
                }]
            }]
        }]
    }
