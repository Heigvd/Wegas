{
    "id": 2003,
    "type" : "Layout",
    "top" : {
        "height": 25,
        "scroll": null,
        "zIndex": 2,
        "children": [{
            "type": "Text",
            "content": "",
            "cssClass": "wegas-editor-title"
        }, {
            "type": "SelectGameButton"
        }, {
            "type": "SelectPlayerButton"
        }, {
            "type": "Button",
            "label": "Developer",
            "plugins": [{
                "fn": "WidgetMenu",
                "cfg": {
                    "children": [{
                        "type": "OpenTabButton",
                        "label": "Console",
                        "subpage": {
                            "type": "Console",
                            "class": "wegas-console",
                            "plugins": [{
                                "fn": "WidgetToolbar",
                                "cfg": {
                                    "children": [{
                                        "type": "SelectPlayerButton"
                                    }]
                                }
                            }]
                        }
                    }, {
                        "type": "OpenTabButton",
                        "label": "Log",
                        "subpage": {
                            "type": "Logger"
                        }
                    }, {
                        "type": "OpenTabButton",
                        "label": "Users",
                        "subpage": {
                            "type": "DataTable",
                            "dataSource": "User",
                            "columnset": [ {
                                "key":"id",
                                "sortable": true
                            }, {
                                "key":"name",
                                "sortable": true
                            }, {
                                "key":"@class"
                            }]
                        }
                    }]
                }
            }]
        },{
            "type": "Button",
            "label": "Scenarist",
            "plugins": [{
                "fn": "WidgetMenu",
                "cfg": {
                    "children": [{
                        "type": "OpenTabButton",
                        "label": "Styles",
                        "subpage": {
                            "type": "CSSEditor",
                            "class": "wegas-csseditor"
                        }
                    },{
                        "type": "OpenTabButton",
                        "label": "Files",
                        "subpage": {
                            "type": "FileExplorer",
                            "plugins": [{
                                "fn": "WidgetToolbar"
                            }]
                        }
                    },{
                        "type": "OpenTabButton",
                        "label": "Scripts",
                        "subpage": {
                            "type": "ScriptLibrary"
                        }
                    }, {
                        "type": "OpenTabButton",
                        "label": "Pages",
                        "subpage": {
                            "type": "EditorTreeView",
                            "dataSource": "Page"
                        }
                    }]
                }
            }]
        },{
            "type": "Button",
            "label": "Animator",
            "plugins": [{
                "fn": "WidgetMenu",
                "cfg": {
                    "children": [{
                        "type": "OpenTabButton",
                        "label": "Players",
                        "subpage": {
                            "type": "EditorTreeView",
                            "dataSource": "Game"
                        }
                    }]
                }
            }]
        },{
            "type": "LoginButton",
            "cssClass": "menu-loginbutton"
        }]
    },
    "left": {
        "width": 300,
        "resize": true,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Variables",
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "VariableDescriptor",
                    "excludeClasses": {
                        "MCQDescriptor": true
                    },
                    "plugins": [{
                        "fn": "WidgetToolbar",
                        "cfg": {
                            "children": [{
                                "type": "NewEntityButton",
                                "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New",
                                "targetClass": "VariableDescriptor"
                            }, {
                                "type": "Button",
                                "label": "<span class=\"wegas-icon wegas-icon-reset\"></span>Restart",
                                "plugins": [{
                                    "fn": "ResetAction"
                                }]
                            }]
                        }
                    }]
                }]
            },  {
                "type": "Tab",
                "label": "Players",
                "children": [{
                    "type": "EditorTreeView",
                    "dataSource": "Game"
                }]
            }]
        }]
    },
    "center": {
        "children": [{
            "id": "centerTabView",
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Preview",
                "children": [{
                    "type": "PageLoader",
                    "pageId": 1,
                    "plugins": [{
                        "fn": "WidgetToolbar",
                        "cfg": {
                            "children": [{
                                "type": "SelectPlayerButton"
                            }]
                        }
                    }]
                }]
            }]
        }]
    },
    "right": {
        "width": 50,
        "resize": true,
        "collapse": false,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "id": "rightTabView",
            "children": [
            {
                "type": "Tab",
                "label": "Chat",
                "toolbarLabel": "Chat",
                "children": [{
                    "type": "Chat"
                }]
            }]
        }]
    }
}
