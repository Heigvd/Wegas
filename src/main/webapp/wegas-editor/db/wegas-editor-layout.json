{
    "type" : "Layout",
    "right": {
        "width": 50,
        "resize": true,
        "collapse": false,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "id": "rightTabView",
            "children": [{
                "type": "Tab",
                "label": "Console",
                "children": [{
                    "type": "Console",
                    "class": "wegas-console"
                }],
                "toolbarChildren": [{
                    "type": "SelectPlayer"
                }]
            },
            {
                "type": "Tab",
                "label": "Chat",
                "toolbarLabel": "Chat",
                "children": [{
                    "type": "Chat"
                }]
            }, {
                "type": "Tab",
                "label": "Scripts",
                "children": [{
                    "type": "ScriptLibrary"
                }]
            }, {
                "type": "Tab",
                "label": "CSS",
                "children": [{
                    "type": "CSSEditor",
                    "class": "wegas-csseditor"
                }]
            }, {
                "type": "Tab",
                "label": "Log",
                "toolbarLabel": "Log",
                "children": [{
                    "type": "Logger"
                }]
            }]
        }]
    },
    "top" : {
        "height": 25,
        "scroll": null,
        "zIndex": 2,
        "children": [{
            "type": "EditorTopMenu"
        }]
    },
    "left": {
        "width": 300,
        "resize": true,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Variables",
                "toolbarChildren": [{
                    "type": "NewButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>",
                    "targetClass": "VariableDescriptor"
                }, {
                    "type": "ResetButton",
                    "label": "<span class=\"wegas-icon wegas-icon-reset\"></span>"
                }],
                "children": [
                {
                    "type": "WTreeView",
                    "dataSource": "VariableDescriptor",
                    "excludeClasses": {
                        "MCQDescriptor": true
                    }
                }]
            }, {
                "type": "Tab",
                "label": "Pages",
                "children": [{
                    "type": "WTreeView",
                    "dataSource": "Page"
                }],
                "toolbarButtons": []
            },
            {
                "type": "Tab",
                "label": "Users",
                "children": [{
                    "type": "DataTable",
                    "dataSource": "User",
                    "columnset": [ {
                        "key":"id",
                        "sortable": true
                    }, {
                        "key":"name",
                        "sortable": true
                    }, {
                        "key":"@class"
                    }]
                } ],
                "toolbarButtons": []
            }
            ]
        }]
    },
    "center": {
        "children": [{
            "id": "centerTabView",
            "type": "TabView",
            "children": [
            {
                "type": "Tab",
                "label": "Preview",
                "toolbarChildren": [{
                    "type": "SelectPlayer"
                }],
                "children": [{
                    "type": "WidgetLoader",
                    "pageId": 1
                }]
            }, {
                "type": "Tab",
                "label": "Games",
                "children": [{
                    "type": "WTreeView",
                    "dataSource": "Game"
                }],
                "toolbarChildren": [{
                    "type": "NewButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>",
                    "targetClass": "Game"
                }]
            }, {
                "type": "Tab",
                "label": "File explorer",
                "children": [{
                    "type": "FileExplorer"
                }]
            }]
        }]
    }
}