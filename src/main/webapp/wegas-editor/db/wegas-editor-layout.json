{
    "id": 2003,
    "type" : "Layout",

    "top" : {
        "height": 25,
        "scroll": null,
        "zIndex": 2,
        "children": [{
            "type": "Button",
            "label": "Scenarist",
            "plugins": [{
                "fn": "WidgetMenu",
                "cfg": {
                    "children": [{
                        "type": "Button",
                        "label": "Styles",
                        "plugins": [{
                            "fn": "OpenTabAction",
                            "cfg": {
                                "subpage": {
                                    "type": "CSSEditor",
                                    "class": "wegas-csseditor"
                                }
                            }
                        }]
                    },{
                        "type": "Button",
                        "label": "Scripts",
                        "plugins": [{
                            "fn": "OpenTabAction",
                            "cfg": {
                                "subpage": {
                                    "type": "ScriptLibrary"
                                }
                            }
                        }]
                    }]
                }
            }]
        }, {
            "type": "Button",
            "label": "Developer",
            "plugins": [{
                "fn": "WidgetMenu",
                "cfg": {
                    "children": [{
                        "type": "Button",
                        "label": "Log",
                        "plugins": [{
                            "fn": "OpenTabAction",
                            "cfg": {
                                "subpage": {
                                    "type": "Logger"
                                }
                            }
                        }]
                    }]
                }
            }]
        }]
    },
    "left": {
        "width": 300,
        "resize": true,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Variables",
                "toolbarChildren": [{
                    "type": "NewButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New",
                    "targetClass": "VariableDescriptor"
                }, {
                    "type": "ResetButton",
                    "label": "<span class=\"wegas-icon wegas-icon-reset\"></span>Restart"
                }],
                "children": [
                {
                    "type": "WTreeView",
                    "dataSource": "VariableDescriptor",
                    "excludeClasses": {
                        "MCQDescriptor": true
                    }
                }]
            }, {
                "type": "Tab",
                "label": "Pages",
                "children": [{
                    "type": "WTreeView",
                    "dataSource": "Page"
                }],
                "toolbarLabel": "Pages"
            },{
                "type": "Tab",
                "label": "Users",
                "children": [{
                    "type": "DataTable",
                    "dataSource": "User",
                    "columnset": [ {
                        "key":"id",
                        "sortable": true
                    }, {
                        "key":"name",
                        "sortable": true
                    }, {
                        "key":"@class"
                    }]
                } ],
                "toolbarLabel": "Users"
            }]
        }]
    },
    "center": {
        "children": [{
            "id": "centerTabView",
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Preview",
                "toolbarChildren": [{
                    "type": "SelectPlayer"
                }],
                "children": [{
                    "type": "PageLoader",
                    "pageId": 1
                }]
            }, {
                "type": "Tab",
                "label": "Games",
                "children": [{
                    "type": "WTreeView",
                    "dataSource": "Game"
                }],
                "toolbarChildren": [{
                    "type": "NewButton",
                    "label": "<span class=\"wegas-icon wegas-icon-new\"></span>New",
                    "targetClass": "Game"
                }]
            }, {
                "type": "Tab",
                "label": "File explorer",
                "children": [{
                    "type": "FileExplorer"
                }],
                "toolbarLabel": "File explorer"
            },{
                "type": "Tab",
                "label": "StateMachine Viewer",
                "children": [{
                    "type": "StateMachineViewer"
                }]
            }, {
                "type": "Tab",
                "label": "Wysiwyg editor",
                "children": [{
                    "type": "WysiwygEditor"
                }]
            }]
        }]
    },
    "right": {
        "width": 50,
        "resize": true,
        "collapse": false,
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "id": "rightTabView",
            "children": [{
                "type": "Tab",
                "label": "Console",
                "children": [{
                    "type": "Console",
                    "class": "wegas-console"
                }],
                "toolbarChildren": [{
                    "type": "SelectPlayer"
                }]
            },
            {
                "type": "Tab",
                "label": "Chat",
                "toolbarLabel": "Chat",
                "children": [{
                    "type": "Chat"
                }]
            }]
        }]
    }
}
