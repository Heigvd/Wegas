<?xml version='1.0' encoding='ISO-8859-1'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>

        <!--<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>-->

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>it</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>wegas-app.Bundle</base-name>
            <var>wegasAppBundle</var>
        </resource-bundle>

    </application>

    <navigation-rule>
        <from-view-id>/wegas-app/view/lobby-jsf.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>gameJoined</from-outcome>
            <to-view-id>/wegas-app/view/lobby-selectteam.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>playGame</from-outcome>
            <to-view-id>/wegas-app/view/play.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/wegas-app/view/lobby-selectteam.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>teamJoined</from-outcome>
            <to-view-id>/wegas-app/view/play.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>id</name>
                    <value>#{lobbyController.currentPlayer.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/wegas-editor/view/lobby-jsf.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>playGame</from-outcome>
            <to-view-id>/wegas-app/view/play.xhtml</to-view-id>
            <redirect />
        </navigation-case>

        <navigation-case>
            <from-outcome>editGame</from-outcome>
            <to-view-id>/wegas-editor/view/editor.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
