			<column name="salt" value="asd324dsafdvdsfdsfewr234" />
		</insert>
		<insert tableName="sec_users">
			<column name="name" value="testuser" />
			<column name="password" value="43854479cf06692d503f93ed988162a280b29f95b5164de77bc04f362592adb5" />
			<column name="salt" value="sdfewtfsd324324dsfcvx" />
		</insert>
		<insert tableName="sec_roles">
			<column name="name" value="Administrator" />
			<column name="description" value="Used for company admins." />
		</insert>
		<insert tableName="sec_roles">
			<column name="name" value="Player" />
